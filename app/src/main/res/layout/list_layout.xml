<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:background="#fff">


    <TextView
        android:id="@+id/dateId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="10-08-20"
        android:textColor="#010101"
        android:layout_marginTop="10dp"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F6F2F2"
        android:layout_margin="6dp"
        android:shape="ring"
        app:cardCornerRadius="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F6F2F2"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/round_shape"
                android:layout_margin="5dp"
                android:backgroundTint="#F6F2F2"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Point :"
                    android:textSize="16sp"
                    android:textColor="#9597A3"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/pointValueId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5.08"
                    android:textSize="18sp"
                    android:textColor="#2B2929"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/colored_border_round_shape"
                    android:textStyle="bold"
                    android:padding="3dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/round_shape"
                android:layout_margin="5dp"
                android:backgroundTint="#F6F2F2"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time :"
                    android:textSize="16sp"
                    android:textColor="#9597A3"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/timeId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.30 pm"
                    android:textSize="15sp"
                    android:textColor="#0F0F0F"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/colored_border_round_shape"
                    android:padding="5dp"
                    />

                <TextView
                    android:id="@+id/eatStatusId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Before eat"
                    android:textSize="15sp"
                    android:textColor="#080808"
                    android:layout_marginLeft="7dp"
                    android:background="@drawable/colored_border_round_shape"
                    android:padding="5dp"
                    />

            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:id="@+id/noteTextId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#8F373636"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:background="@drawable/note"
                    android:drawableLeft="@drawable/ic_baseline_event_note_24"
                    android:layout_gravity="center"
                    android:text="abcd"
                    />

            </ScrollView>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>